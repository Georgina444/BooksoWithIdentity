@using Bookso.Models
@model CoverType
@*we are not passing any model, but we need the properties from the Category model*@

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Edit Cover Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="None"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" value="Save" class=" btn btn-danger" style="width:150px">Update</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To List</a>
    </div>

</form>

@section Scripts{
   @{
       <partial name="_ValidationScriptsPartial" />
    }
}