@using Bookso.Models
@model IEnumerable<CoverType>    
@*you are passing the model from the CategoryController*@
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>CoverType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Cover Type Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @*we need a for each loop to operate throught the IEnumerable and display the actual values*@
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-55 btn-btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
                                class="btn btn-secondary mx-2"> <i class="bi bi-pen"></i> Edit </a>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
</div>

