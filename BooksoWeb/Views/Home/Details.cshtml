@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card  container pt-5">
        <div class="card-header bg-secondary text-light ml-0  row pd-5 ">
            <div class="col-12 col-md-6">
                <h1 style="color:lavender">@Model.Product.Title</h1>
                <p class="bg-secondary text-light">by @Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2" style="height:30px; width:130px; font-size:15px">@Model.Product.CoverType.Name</span>
                <span class="badge bg-danger pt-2" style="height:30px; width:130px;font-size:15px">@Model.Product.Category.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">

                        <div class="row pl-2">
                            <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">List Price: <strike>@Model.Product.ListPrice.ToString("c")</strike></h5>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 text-bg-danger border-bottom">
                                <div>Quantity</div>
                            </div>
                            <div class="p-1 col-2 text-bg-danger border-bottom">
                                <div>One Book</div>
                            </div>
                            <div class="p-1 col-2 text-bg-danger border-bottom">
                                <div>2+ Books</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:lavender; font-weight:bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Product.Price2.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2" style="color:blueviolet"><h4>Count</h4></div>
                            <div class="col-2"><input asp-for="Count" class="form-control" /></div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImageUrl" width="50%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-info pt-2 form-control" style="height:50px; "asp-action="Index">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-danger form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>


