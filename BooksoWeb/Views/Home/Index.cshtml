@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded"/>
                        <div class="pl-1">
                            <p class="card-title h4 text-danger p-2" style="text-align:center">@product.Title</p>
                            <p class="card-title h5 text-info" style="text-align:center">by <b>@product.Author</b></p>
                        </div>
                        <div class="pl-1">
                            <p style="padding-left:10px">List Price:<strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div class="pl-1">
                            <p style="padding-left:10px">Current Price:<b>$@product.Price.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-danger form-control" asp-route-id="@product.ProductId">
                            Details
                        </a>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

<style>
    .card-img-top {
        height: 390px;
        width: 100%;
        object-fit: cover;
    }
</style>